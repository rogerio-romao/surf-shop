<h1>Edit post!</h1>

<form action='/posts/<%= post.id %>?_method=PUT' method='POST'>
    <div><input type='text' placeholder='Title' name='title' value='<%= post.title %>'></div>
    <div><input type='text' placeholder='Price' name='price' value='<%= post.price %>'></div>
    <div><textarea placeholder='Description' name='description'><%= post.description %></textarea></div>
    <div><input type='text' placeholder='Location' name='location' value='<%= post.location %>'></div>
    
    <input type='submit'>
</form>